<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.rivios_.sportapp.activities.MapsActivity">

    <Button
        android:id="@+id/undoMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukloni zadnji"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="undoMarker"/>

    <Button
        android:id="@+id/saveRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spremi rutu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="saveRoute"/>

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.rivios_.sportapp.activities.MapsActivity"
        android:layout_above="@id/undoMarker"/>
</RelativeLayout>

