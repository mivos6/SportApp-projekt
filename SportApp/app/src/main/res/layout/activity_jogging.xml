<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rivios_.sportapp.activities.jogging.JoggingRaceStats"
    android:background="@color/jogging"
    android:contextClickable="false">

    <Button
        android:id="@+id/addRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="addRoute"
        android:text="Dodaj rutu"
        android:textAllCaps="false"
        android:textColor="@color/jogging" />

    <EditText
        android:id="@+id/start"
        android:layout_below="@id/addRoute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:inputType="none" />

    <EditText
        android:id="@+id/finish"
        android:layout_below="@id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cilj"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:inputType="none" />

    <EditText
        android:id="@+id/datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finish"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:hint="Datum"
        android:onClick="setDate"/>

    <Button
        android:id="@+id/addRunner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/finish"
        android:layout_marginTop="36dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:onClick="runnersActivity"
        android:text="Dodaj natjecatelje"
        android:textAllCaps="false"
        android:textColor="@color/jogging" />

    <Button
        android:id="@+id/archive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addRunner"
        android:layout_marginTop="83dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Pogledaj arhivu utrka"
        android:textAllCaps="false"
        android:textColor="@color/jogging"
        android:onClick="openRaces"/>


    <Button
        android:id="@+id/saveRace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Spremi utrku"
        android:textAllCaps="false"
        android:textColor="@color/jogging"
        android:onClick="saveToDB" />


</RelativeLayout>



