<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rivios_.sportapp.MainActivity"
    android:background="@color/colorPrimary">


    <Button
        android:id="@+id/kosarka"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="basketballgamestats"
        android:text="@string/kosarka"
        android:textColor="#c23f06"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nogomet"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/kosarka"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/kosarka"
        android:layout_below="@+id/kosarka"
        android:text="@string/nogomet"
        android:textColor="#32b423"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:onClick="footballgamestats"/>

    <Button
        android:id="@+id/tenis"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/nogomet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/nogomet"
        android:layout_below="@+id/nogomet"
        android:text="@string/tenis"
        android:textColor="#d1c024"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/trcanje"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_alignEnd="@+id/tenis"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tenis"
        android:layout_below="@+id/tenis"
        android:text="@string/trcanje"
        android:textColor="#37b3ae"
        android:textSize="@android:dimen/app_icon_size"
        android:textStyle="bold" />

</RelativeLayout>

